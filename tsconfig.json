{
    "include": ["./src/*"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "strict": false,
        "outDir": "./build/",
        "noImplicitAny": true,
        "module": "es2015",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "lib": ["dom", "es2015"],
        "allowSyntheticDefaultImports": true
    }
}
